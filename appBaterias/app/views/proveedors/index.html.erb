<h1>Lista de Proveedores</h1>

<table>
  <thead>
    <tr>
      <th>Cedula</th>
      <th>Nombre</th>
      <th>Contacto</th>
      <th>Telefono 1</th>
      <th>Telefono 2</th>
      <th>Email</th>
      <th>Maximo Credito</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @proveedors.each do |proveedor| %>
      <tr>
        <td><%= proveedor.cedulaProveedor %></td>
        <td><%= proveedor.nombreProveedor %></td>
        <td><%= proveedor.nombreContacto %></td>
        <td><%= proveedor.telefono1 %></td>
        <td><%= proveedor.telefono2 %></td>
        <td><%= proveedor.email %></td>
        <td><%= proveedor.maximoCredito %></td>
        <td><%= link_to 'Lista de Proveedores', proveedor %></td>
        <td><%= link_to 'Editar', edit_proveedor_path(proveedor) %></td>
        <td><%= link_to 'Eliminar', proveedor, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Proveedor', new_proveedor_path %>
